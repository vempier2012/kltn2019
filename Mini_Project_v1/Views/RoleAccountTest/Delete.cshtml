@model Mini_Project_v1.Models.RoleAccount

@{
    ViewBag.Title = "Xóa phân quyền";
}

<h2>Xóa phân quyền</h2>

<h3>Bạn có chắc chắn rặng bạn muốn xóa không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Mã phân quyền")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role)
        </dd>

        <dt>
            @Html.DisplayName("Tên gọi phân quyền")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenRole)
        </dd>

        <dt>
            @Html.DisplayName("Mô tả")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-info" /> |
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    }
</div>
