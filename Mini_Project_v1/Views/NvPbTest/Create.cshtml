@model Mini_Project_v1.Models.NhanViensPhongBan

@{
    ViewBag.Title = "Thêm nhân viên vào phòng ban";
}

<h2>Thêm nhân viên vào phòng ban</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.IDNV, "Nhân viên", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IDNV", null, htmlAttributes: new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.IDNV, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaPB, "Phòng ban", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaPB", null, htmlAttributes: new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.MaPB, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaChucVu, "Chức vụ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaChucVu", null, htmlAttributes: new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.MaChucVu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Describe, "Mô tả", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.TextAreaFor(model => model.Describe, new { htmlAttributes = new { @class = "form-control" }, @cols = 100, @rows = 5, @style = "width: 100%" })*@
            @Html.TextAreaFor(model => model.Describe, 5, 50, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
            @Html.ValidationMessageFor(model => model.Describe, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p style="color: red">@ViewBag.CreateFail</p>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-info" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại danh sách phòng ban", "Index", new { Controller = "PhongBanTest", action = "Index" }) |
    @Html.ActionLink("Quay lại danh sách nhân viên phòng ban", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
