@model IEnumerable<Mini_Project_v1.Models.NhanViensPhongBan>

@{
    ViewBag.Title = "Danh sách nhân viên cùng phòng ban";
}

<h2>Danh sách</h2>

<p>
    @Html.ActionLink("Thêm nhân viên vào phòng ban", "Create")
</p>
<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class=" input-group-text">
                <i class="fa fa-search"></i>
            </span>
        </div>
        <input type="text" class="form-control" id="Search" placeholder="Search...">
    </div>
</div>
<table class="table text-center">
    <tr>
        <th>
            @Html.DisplayName("IDNV")
        </th>
        <th>
            @Html.DisplayName("Mã phòng ban")
        </th>
        <th>
            @Html.DisplayName("Mã chức vụ")
        </th>
        <th>
            @Html.DisplayName("Mô tả")
        </th>
        <th></th>
    </tr>
        
    @foreach (var item in Model)
    {
        <tr class="Search">
            <td>
                @Html.DisplayFor(modelItem => item.IDNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaPB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaChucVu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Describe)
            </td>
            <td>
                @Html.ActionLink("Thay đổi chức vụ ", "Edit", new { id = item.IDNV, id2 = item.MaPB }) |
                @Html.ActionLink("Xóa", "Delete", new { Controller = "NvPbTest", action = "Delete", id = item.IDNV, id2 = item.MaPB })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(document).ready(function () {
            function Contains(t1, t2) {
                if (t1.indexOf(t2) != -1)
                    return true;
            }
            $("#Search").keyup(function () {
                var searchtext = $("#Search").val().toLowerCase();
                $(".Search").each(function () {
                    if (!Contains($(this).text().toLowerCase(), searchtext)) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                });
            });
        });
    </script>
}
