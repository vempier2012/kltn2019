@model IEnumerable<Mini_Project_v1.Models.Account>

@{
    ViewBag.Title = "Danh sách tài khoản";
}

<h2>Danh sách tài khoản</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class=" input-group-text">
                <i class="fa fa-search"></i>
            </span>
        </div>
        <input type="text" class="form-control" id="Search" placeholder="Search...">
    </div>
</div>
<table class="table text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDNV)
        </th>
        <th>
            @Html.DisplayName("Tài khoản")
        </th>
        <th>
            @Html.DisplayName("Mật khẩu")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="Search">
            <td>
                @Html.DisplayFor(modelItem => item.IDNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Taikhoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matkhau)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.ActionLink("Thay đổi thông tin", "Edit", new { id = item.IDA }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDA })
            </td>
        </tr>
    }
</table>
<div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            function Contains(t1, t2) {
                if (t1.indexOf(t2) != -1)
                    return true;
            }
            $("#Search").keyup(function () {
                var searchtext = $("#Search").val().toLowerCase();
                $(".Search").each(function () {
                    if (!Contains($(this).text().toLowerCase(), searchtext)) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                });
            });
        });
    </script>    
}