@model IEnumerable<Mini_Project_v1.Models.XepLoaiNV>

@{
    ViewBag.Title = "Danh mục phân quyền tài khoản";
}

<h2>Danh sách phân loại nhân viên</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class=" input-group-text">
                <i class="fa fa-search"></i>
            </span>
        </div>
        <input type="text" class="form-control" id="Search" placeholder="Search...">
    </div>
</div>
<table class="table text-center">
    <tr>
        <th>
            @Html.DisplayName("Mã loại nhân viên")
        </th>
        <th>
            @Html.DisplayName("Tên gọi")
        </th>
        <th>
            @Html.DisplayName("Mô tả")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr class="Search">
        <td>
            @Html.DisplayFor(modelItem => item.MaLoaiNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoaiNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            @Html.ActionLink("Thay đổi thông tin phân loại", "Edit", new { id = item.MaLoaiNV }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoaiNV })
        </td>
    </tr>
    }

</table>
@section scripts{
    <script>
        $(document).ready(function () {
            function Contains(t1, t2) {
                if (t1.indexOf(t2) != -1)
                    return true;
            }
            $("#Search").keyup(function () {
                var searchtext = $("#Search").val().toLowerCase();
                $(".Search").each(function () {
                    if (!Contains($(this).text().toLowerCase(), searchtext)) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                });
            });
        });
    </script>
}
