@model IEnumerable<Mini_Project_v1.Models.RoleAccount>

@{
    ViewBag.Title = "Danh sách phân quyền";
}

<h2>Danh mục các phân quyền</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class=" input-group-text">
                <i class="fa fa-search"></i>
            </span>
        </div>
        <input type="text" class="form-control" id="Search" placeholder="Search...">
    </div>
</div>
<table class="table text-center">
    <tr>
        <th>
            @Html.DisplayName("Tên gọi phân quyền")
        </th>
        <th>
            @Html.DisplayName("Mô tả")
        </th>
        <th>
            @Html.DisplayName("Mã chức vụ")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="Search">
            <td>
                @Html.DisplayFor(modelItem => item.TenRole)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaChucVu)
            </td>
            <td>
                @Html.ActionLink("Thay đổi thông tin phân quyền", "Edit", new { id = item.Role }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Role })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(document).ready(function () {
            function Contains(t1, t2) {
                if (t1.indexOf(t2) != -1)
                    return true;
            }
            $("#Search").keyup(function () {
                var searchtext = $("#Search").val().toLowerCase();
                $(".Search").each(function () {
                    if (!Contains($(this).text().toLowerCase(), searchtext)) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                });
            });
        });
    </script>
}
