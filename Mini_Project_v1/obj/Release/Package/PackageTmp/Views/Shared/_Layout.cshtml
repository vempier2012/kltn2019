<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
</head>
<body>
    
    
    <div class="jumbotron" style="margin-bottom: 0px">
        <h1>Ứng dụng quản lý nhân sự | AIT PROJECT</h1>
        <p>Design by me</p>
    </div>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">

        <a class="navbar-brand"><img src="~/Content/logo.png" style="width: 35px"/></a>
        <a class="navbar-text" href="~/Home/Trangchu">HR Project</a>

        <ul class="navbar-nav ml-3">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" data-target="dropdown-target" href="#">
                    Nhân viên
                    <span class="caret"></span>
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdown-target">
                    <a class="dropdown-item" href="~/NhanvienTest/Index">Quản lý nhân viên</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="~/NvPbTest/Index">Danh sách nhân viên và phòng ban</a>
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" data-target="dropdown-target" href="#">
                    Phòng ban
                    <span class="caret"></span>
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdown-target">
                    <a class="dropdown-item" href="~/PhongBanTest/Index">Quản lý phòng ban</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="~/PhongBanTest/Create">Thêm phòng ban</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="~/NvPbTest/Create">Thêm nhân viên vào phòng ban</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/AccountsTest/Index">Quản lý tài khoản</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-toggle="dropdown" data-target="dropdown-target" href="#">
                    Khác
                    <span class="caret"></span>
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdown-target">
                    <a class="dropdown-item" href="~/DanhMucChucVuTest/Index">Quản lý danh mục chức vụ</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="~/XepLoaiNVTest/Index">Phân loại nhân viên</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="~/RoleAccountTest/Index">Quản lý phân quyền tài khoản</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Home/About">About</a>
            </li>
        </ul>
        
        <ul class="navbar-nav ml-auto">
            <li class="nav-item mr-3">
                @if (Session.Count == 0)//khi session.count = 0 --> chưa login --> chuyển trang sang Login
                {
                    if (!Response.IsRequestBeingRedirected)//chặn không cho page redirect nhiều lần cho cùng 1 trang
                    {
                        Response.Redirect("~/AccountsTest/LogControl", true);
                    }
                } else {
                    @Html.ActionLink("Chào " + Session["userName"].ToString(), "TrangChu", "Home", new { area = "" }, null)}
            </li>
            <li class="vl" style="border-left: 2px solid; height: 25px; margin-right: 15px; color: rgba(255, 255, 255, 0.5)"></li>
            <li class="nav-item">
                @Html.ActionLink("Đăng xuất", "Logout", "AccountsTest", new { area = "" }, null)
            </li>
        </ul>
    </nav>
    <div class="container-fluid mx-auto body-content mt-3">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
